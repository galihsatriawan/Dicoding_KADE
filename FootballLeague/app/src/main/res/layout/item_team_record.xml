<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="id.shobrun.footballleague.ui.adapters.RecyclerTeamRecordsAdapter.TeamRecordViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:text="@string/rank"
            android:text="@{vm.tv_rank}"
            android:gravity="center"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgTeam"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/activity_vertical_margin_8dp"
            android:src="@drawable/ic_home_team"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvTeamName"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:text="@string/title_team"
            android:text="@{vm.tv_name_team}"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPlayed"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:text="@string/played"
            android:text="@{vm.tv_played}"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvWin"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:text="@string/win"
            android:text="@{vm.tv_win}"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDraw"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:text="@string/draw"
            android:text="@{vm.tv_draw}"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLost"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            tools:text="@string/lose"
            android:text="@{vm.tv_lose}"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>
</layout>